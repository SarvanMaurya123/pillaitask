generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum State {
  Maharashtra
  Karnataka
  Gujarat
  Rajasthan
  TamilNadu
}

enum Program {
  Engineering_and_Technology
  Management_BBA_MBA
  Computer_Applications_BCA_MCA
  Science_BSc_MSc
  Commerce_BCom_MCom
  Pharmacy
  Law_BA_LLB_BBA_LLB
  Design_BDes_MDes
}

model Admission {
  id              String   @id @default(cuid())
  name            String
  email           String
  phone           String
  state           State
  city            String
  program         Program
  course          String
  agree           Boolean
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Admin {
  id        String   @id @default(cuid())
  name  String   
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}